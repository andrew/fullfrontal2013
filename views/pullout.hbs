
{{> header}}

{{#each workshops}}
<div id="{{slug}}-pullout" class="workshop-pullout">
  <header class="masthead" role="banner">

    <nav role="navigation">
      <a href="#">x</a>
      <!-- TODO: I'm not sure these links make sense with only 2 workshops?
        <a href="#"><</a>
        <a href="#">></a>
      -->
    </nav>

    <h1 class="section-heading" role="heading" aria-level="1">{{title}}</h1>

    <div class="details">
      With {{speaker.name}}<br>
      Conference pass included
    </div>

    <div class="tickets">
      <a href="{{ticket.url}}" class="button buy">Buy Tickets &pound;{{ticket.price}}<span> <abbr class="buy-vat" title="plus Value Added Tax">+VAT</abbr></a>
      <a href="{{ticket.url}}" class="button sold-out">Sold Out</a>
    </div>

  </header>

  <section class="details region alt">
    <h2 class="section-heading" role="heading" aria-level="2">Details</h2>

    {{#if speaker.photo}}
      <div class="mugshot">
        <img src="/images/speakers/{{speaker.photo}}">
      </div>
    {{/if}}

    <ul class="details">
      {{#if details.date}}
        <li class="detail date">
          <span class="type">Date</span>
          <span class="data">{{details.date}}</span>
        </li>
      {{/if}}
      {{#if details.time}}
        <li class="detail time">
          <span class="type">Time</span>
          <span class="data">{{details.time}}</span>
        </li>
      {{/if}}
      {{#if speaker.name}}
        <li class="detail speaker">
          <span class="type">Teacher</span>
          <span class="data">{{speaker.name}}</span>
        </li>
      {{/if}}
      {{#if details.venue}}
        <li class="detail venue">
          <span class="type">Venue</span>
          <span class="data">{{details.venue}}</span>
        </li>
      {{/if}}
    </ul>

    {{#if description}}
      <p class="description">
        {{description}}
      </p>
    {{/if}}

    {{#if extendedDescription}}
      <p class="extendedDescription">
        {{extendedDescription}}
      </p>
    {{/if}}

    <h3 class="topics section-heading" role="heading" aria-level="3">Topics</h3>

    {{#each topics}}
      <div class="topic">
        <span class="title">{{title}}</span>
        <span class="description">{{description}}</span>
      </div>
    {{/each}}

  </section>
{{/each}}

{{> footer}}
